<div class="container mt-5">
    Current Page: <%= @search_facade.current_page %>
    Total Results: <%= @search_facade.total_results %>
    Total Pages: <%= @search_facade.total_pages %>
    <div class="row">
        <% @search_facade.movie_overviews.each do |movie_overview| %>
            <div class="col-sm-3 mb-3">
                <a href="movies/<%= movie_overview.id %>" class="btn card h-100" data-toggle="tooltip" title="Hovering now">
                    <%= image_tag("https://image.tmdb.org/t/p/w300/#{movie_overview.backdrop_path}", class: "card-img-top", alt: "No Image") %>
                    <div class="card-body">
                    <h6 class="card-title">
                        <%= movie_overview.title %>
                        <small class="text-muted"><%= movie_overview.year %></small>
                    </h6>
                    <!-- <p class="card-text"><%= movie_overview.short_description %></p> -->
                    </div>
                </a>
            </div>
        <% end %>
    </div>
    <%= render partial: 'pagination', locals: {total_pages: @search_facade.total_pages, current_page: @search_facade.current_page, query: @search_facade.query } %>
    
