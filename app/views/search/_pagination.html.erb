<% if total_pages.last > 1 %>
    <ul class="pagination justify-content-center">
        <% total_pages.each do |num| %>
            <% if num == current_page %>
                <li class="page-item active"><a class="page-link" href="#"><%= num %></a></li>
            <% else %>
                <li class="page-item"><a class="page-link" href="/search?title=<%= query %>&page=<%= num %>"><%= num %></a></li>
            <% end %>
        <% end %>
    </ul>
<% end %>